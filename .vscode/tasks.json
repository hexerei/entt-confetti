{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-stdlib=libc++",
                "-Wall",
                "-Wempty-body",
                "-Werror",
                "-Wstrict-prototypes",
                "-Werror=uninitialized",
                "-Warray-bounds",
                "-Wformat",
                "-DDEBUG",
                "-g3",
                "-Og",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/debug/main",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/vendor/entt/src",
                "`sdl2-config --libs`",
                "-lSDL2_mixer",
                "-lSDL2_image",
                "-lSDL2_ttf"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}